.discussions
    &__header
        display flex
        justify-content space-between
        margin-bottom 2rem
        +below(480px)
            display block

    &__actions
        display flex
        align-items center
        +below(480px)
            margin-top 2rem

    &__heading
        font-size 2.2rem

    &__meta
        font-size 1.6rem
        color grey

.comments
    margin-top 2rem

.comment
    display flex
    position relative

    + .comment
        margin-top 6rem

    &__meta
        flex 0 0 8rem
        +below('s')
            flex 0 0 5rem

    &__body
        flex 1 1 auto
        overflow auto

    &__user
        color black
        line-height 1.2

    &__date
        color grey
        font-size 1.4rem

    &__text
        color grey-darkest
        margin 1.5rem 0
        line-height 1.4
        overflow-y auto

        p
            margin-bottom 1rem

    &__actions
        color grey-dark
        line-height 1
        font-size 1.4rem

        a
            color inherit
            display inline-block
            border-bottom 1px solid grey
            margin-right 1rem

    &__reply .comment-form
        margin-top 2rem

    &__children
        margin-top 4rem

    .voter
        left .8rem
        top 5.55rem
        right auto
        +below('s')
            left 0rem

        &__votes
            @extends .trick-votes
            margin 0
            font-size 1.3rem
            position relative
            display block
            top -.1rem

        &__arrow
            svg
                transform scale(.8)
                transform-origin center

            &--up svg
                transform scale(.8) rotate(180deg)


.avatar
    width 4.5rem
    height 4.5rem
    border-radius 50%
    box-shadow inset 0 2px 3px rgba(0, 0, 0, .15)
    background grey-lightest
    display flex
    align-items center
    justify-content center
    overflow hidden
    +below('s')
        width 2.75rem
        height 2.75rem

    &__image
        object-fit cover
        object-position center
        width 100%
        height 100%


.comment-form
    margin-bottom 4rem