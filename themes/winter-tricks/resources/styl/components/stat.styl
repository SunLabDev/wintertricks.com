.stat
    display flex
    flex-direction column
    align-items center
    justify-content space-between
    +below(800px)
        width 100%
        flex-direction row

    &__value
        font-size 1.8rem
        +below(800px)
            font-size 1.4rem
            flex 1 0 2rem
            text-align right

    &__label
        font-size 1.2rem
        color grey-darker
        +below(800px)
            font-size 1rem
            flex 1 1 3rem
            margin-left 1rem
            text-align right


    +above(800px)
        + .stat
            margin-left 3rem

.stats
    display flex
    justify-content space-between
    align-items flex-end
    +below(800px)
        flex-direction column
        justify-content center
        flex 1 1 auto

.dot
    width 1.5rem
    height 1.5rem
    border-radius 50%
    background grey-light

    &--green
        background green-light
